@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/Login_layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label class="small mb-1" for="inputEmailAddress">Email</label>
                            <input class="form-control py-4" id="inputlogin" type="text" placeholder="Enter username" asp-for="@Model.user.username" />
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" for="inputPassword">Password</label>
                            <input class="form-control py-4" id="inputPassword" type="password" placeholder="Enter password" asp-for="@Model.user.password" />
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" for="inputPassword">Login as :</label>
                            <select class="form-control" asp-for="@Model.user.option">
                                <option></option>
                                <option>Eleve</option>
                                <option>Prof</option>
                                <option>Admin</option>

                            </select>
                        </div>
                       <hr />
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button  type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    
                </div>
            </div>
        </div>
    </div>
</div>

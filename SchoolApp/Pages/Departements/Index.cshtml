@model SchoolApp.Pages.Departements.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departement[0].IdDep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departement[0].NomDep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Departement) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomDep)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdDep">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdDep">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdDep">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

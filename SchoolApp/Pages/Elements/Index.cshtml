@foreach (var item in Model.Element) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomElem)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdElem">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdElem">Details</a> |

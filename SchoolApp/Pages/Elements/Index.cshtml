@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Element[0].IdMod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Element[0].IdProf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Element[0].NomElem)
            </th>
            <th></th>
        </tr>

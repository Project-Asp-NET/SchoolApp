@page
@model SchoolApp.Pages.Profs.ProfileModel
@{
    ViewData["Title"] = "Ajouter absence";
    ViewData["Adminname"] = "Firdaous";
    Layout = "~/Pages/Shared/layout_prof.cshtml";
}
<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <br /><br />
        </nav>
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">

            <div class="col-md-4 mb-3" style="align-self:center">

                <div class="card">
                    <br /> <br />
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <br /><div class="mt-3">
                                <h4>@Model.Prof.Nom @Model.Prof.Prenom</h4>
                                <br />
                                <a class="btn btn-outline-primary" asp-page="/Eleve/Absences">Absences</a>&nbsp;
                                <a class="btn btn-outline-primary" asp-page="/Eleve/Notes">Notes</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Code Apoge</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Prof.IdProf
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nom Prenom</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Prof.Nom @Model.Prof.Prenom
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Filliere</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                               
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Prof.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telephone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Prof.Tel
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

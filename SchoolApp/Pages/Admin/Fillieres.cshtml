@page
@model SchoolApp.Pages.Administrateur.FillieresModel
@{
    ViewData["Title"] = "Filieres";
    //ViewData["Adminname"] = "Mohamed";
    Layout = "~/Pages/Shared/layout_admin.cshtml";
}
<div class="card mb-4">
    <nav class="navbar navbar-light bg-light justify-content-between">
        <div>
            <i class="fas fa-table mr-1"></i>
            Tables Des Filieres
        </div>
        <!--
    <div class="form-inline">
        <button class="btn btn-outline-primary" data-toggle="modal" data-target="#Add">Add</button>&nbsp;&nbsp;
        <button class="btn btn-outline-secondary" data-toggle="modal" data-target="#Edit">Edit</button>&nbsp;&nbsp;
        <button class="btn btn-outline-danger" data-toggle="modal" data-target="#Delete">Delete</button>
    </div>-->
    </nav>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Fill[0].IdFill)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fill[0].NomFill)
                        </th>

                        <th>
                            Nbr des Modules
                        </th>

                        <th>
                            Nbr des Etudiants
                        </th>
                        <th>
                            Chef de Filliere
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Fill[0].IdFill)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fill[0].NomFill)
                        </th>

                        <th>
                            Nbr des Modules
                        </th>

                        <th>
                            Nbr des Etudiants
                        </th>
                        <th>
                            Chef de Filliere
                        </th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Fill)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdFill)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomFill)
                        </td>
                        <td>
                            @item.Modules.Count()
                        </td>
                        <td>
                            @item.Etudiants.Count()
                        </td>
                        <td>
                            @Model.Prof.Single(s => s.IdProf == item.IdProf).Nom @Model.Prof.Single(s => s.IdProf == item.IdProf).Prenom
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
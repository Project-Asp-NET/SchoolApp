@page
@model SchoolApp.Pages.Administrateur.EtudiantsModel
@{
    ViewData["Title"] = "Etudiants";
    ViewData["Adminname"] = "Mohamed";
    Layout = "~/Pages/Shared/layout_admin.cshtml";
}

<div class="card mb-4">
    <!--<div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Tables Des Etudiants

    </div>-->
    <nav class="navbar navbar-light bg-light justify-content-between">
        <div>
            <i class="fas fa-table mr-1"></i>
            Tables Des Etudiants
        </div>
        <div class="form-inline">
            <button class="btn btn-outline-primary" data-toggle="modal" data-target="#Add">Add New</button>
        </div>
    </nav>
    <!--<p>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#Add">Add</button>
    </p>
    -->
    
    <div class="card-body">
        <div class="table-responsive">

            

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].IdEtud)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Prenom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].IdFill)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Tel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].DateNaiss)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Adresse)
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].IdEtud)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Prenom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].IdFill)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Tel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].DateNaiss)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Etudiant[0].Adresse)
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Etudiant)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.IdEtud)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prenom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdFill)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateNaiss)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Adresse)
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="Add">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Etudiant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Email</label>
                            <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Password</label>
                            <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" id="inputCity">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State</label>
                            <select id="inputState" class="form-control">
                                <option selected>Choose...</option>
                                <option>...</option>
                            </select>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input type="text" class="form-control" id="inputZip">
                        </div>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" asp-page="/Administateur/Etudiants">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@page
@model SchoolApp.Pages.Administrateur.DepartementsModel
@{
    ViewData["Title"] = "Departements";
    ///ViewData["Adminname"] = "Mohamed";
    Layout = "~/Pages/Shared/layout_admin.cshtml";
}
<div class="card mb-4">
    <nav class="navbar navbar-light bg-light justify-content-between">
        <div>
            <i class="fas fa-table mr-1"></i>
            Tables Des Departements
        </div>
        <!--
    <div class="form-inline">
        <button class="btn btn-outline-primary" data-toggle="modal" data-target="#Add">Add</button>&nbsp;&nbsp;
        <button class="btn btn-outline-secondary" data-toggle="modal" data-target="#Edit">Edit</button>&nbsp;&nbsp;
        <button class="btn btn-outline-danger" data-toggle="modal" data-target="#Delete">Delete</button>
    </div>-->
    </nav>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Dep[0].IdDep)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Dep[0].NomDep)
                        </th>
                        <th>
                            Nbr de Profs
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Dep[0].IdDep)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Dep[0].NomDep)
                        </th>
                        <th>
                            Nbr de Profs
                        </th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Dep)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdDep)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomDep)
                            </td>
                            <td>
                                @item.Profs.Count()
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
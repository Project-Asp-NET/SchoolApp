@page
@model SchoolApp.Pages.Etudiants.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Etudiant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Etudiant.IdEtud" />
            <div class="form-group">
                <label asp-for="Etudiant.IdFill" class="control-label"></label>
                <select asp-for="Etudiant.IdFill" class="form-control">

                    @foreach (var item in Model.Fillere)
                    {
                        <option>@Html.DisplayFor(modelItem => item.IdFill)</option>

                    }
                </select>
                <span asp-validation-for="Etudiant.IdFill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Password" class="control-label"></label>
                <input asp-for="Etudiant.Password" class="form-control" />
                <span asp-validation-for="Etudiant.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Nom" class="control-label"></label>
                <input asp-for="Etudiant.Nom" class="form-control" />
                <span asp-validation-for="Etudiant.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Prenom" class="control-label"></label>
                <input asp-for="Etudiant.Prenom" class="form-control" />
                <span asp-validation-for="Etudiant.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Email" class="control-label"></label>
                <input asp-for="Etudiant.Email" class="form-control" />
                <span asp-validation-for="Etudiant.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Tel" class="control-label"></label>
                <input asp-for="Etudiant.Tel" class="form-control" />
                <span asp-validation-for="Etudiant.Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.DateNaiss" class="control-label"></label>
                <input asp-for="Etudiant.DateNaiss" class="form-control" />
                <span asp-validation-for="Etudiant.DateNaiss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Adresse" class="control-label"></label>
                <input asp-for="Etudiant.Adresse" class="form-control" />
                <span asp-validation-for="Etudiant.Adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

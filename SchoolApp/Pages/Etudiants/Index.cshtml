                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdEtud">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdEtud">Details</a> |

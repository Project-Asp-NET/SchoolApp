                @Html.DisplayNameFor(model => model.Etudiant[0].IdEtud)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Etudiant[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant[0].Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant[0].IdFill)
            </th>
